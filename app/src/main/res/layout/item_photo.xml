<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Userbar"
        android:background="#ffffff">


        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivAvatar"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:maxHeight="50dp"
            android:maxWidth="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:text="Username"
            android:id="@+id/tvUsername"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColorHint="#3f719b"
            android:textColor="#3f719b" />

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/tvTime"
            android:textAlignment="textEnd"
            android:textColor="#b9bbbd" />
    </LinearLayout>

    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:minHeight="50dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/Userbar"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captions"
        android:id="@+id/tvCaption"
        android:textSize="20sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#b6b8bb"
        android:layout_below="@+id/tvLikes"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#3f6e94" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Loading"
        android:layout_above="@+id/tvLikes"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:indeterminate="false" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all comments"
        android:id="@+id/Viewallcomment"
        android:layout_below="@+id/tvCaption"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

</RelativeLayout>