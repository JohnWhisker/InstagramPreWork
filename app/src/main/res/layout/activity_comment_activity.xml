<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    tools:context=".CommentActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvComment"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivpostava"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:maxHeight="50dp"
                android:maxWidth="50dp" />

            <TextView
                android:onClick="OnClick"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:text="Username"
                android:id="@+id/tvpostname"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColorHint="#3f719b"
                android:textColor="#3f719b"
                android:clickable="true" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/tvposttime"
                android:textAlignment="textEnd"
                android:textColor="#b9bbbd" />
        </LinearLayout>

        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/ivmedia"
            android:adjustViewBounds="true"
            android:minHeight="90dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/Userbar"
            android:layout_alignParentStart="true"
            android:maxHeight="90dp"
            android:maxWidth="90dp"
            android:minWidth="90dp"
            android:cropToPadding="false"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:id="@+id/tvpostlike"
            android:layout_below="@+id/ivPhoto"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#3f6e94"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</RelativeLayout>
